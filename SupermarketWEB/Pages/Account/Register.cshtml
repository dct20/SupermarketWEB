@page
@model SupermarketWEB.Pages.Account.RegisterModel
@{
}
<h2>Registro</h2>

<form method="post">
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="User.Username" id="username" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="User.PasswordInput" id="password" required>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
